# Hospital-Ops API Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
APP_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/hospital_ops
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6380

# JWT (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS (optional for local development)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
CDN_URL=

# ABDM Integration (optional)
ABDM_CLIENT_ID=
ABDM_CLIENT_SECRET=
ABDM_BASE_URL=https://dev.abdm.gov.in

# WhatsApp Business API (optional)
WHATSAPP_API_URL=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=debug

# Feature Flags
ENABLE_ONLINE_BOOKING=true
ENABLE_TELEMEDICINE=true
ENABLE_AI_FEATURES=true

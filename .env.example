# ===========================================
# Hospital Ops - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
WEB_URL=http://localhost:3001
BOOKING_URL=http://localhost:3002

# Database (Docker defaults)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hospital_ops
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (Docker defaults)
REDIS_URL=redis://localhost:6379

# JWT (generate a secure key for production)
JWT_SECRET=local-development-secret-key-min-32-chars-change-in-prod
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption (generate a 32-byte hex key for production)
ENCRYPTION_MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# AWS
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=local-dev-key
AWS_SECRET_ACCESS_KEY=local-dev-secret
S3_BUCKET_NAME=hospital-ops-local
S3_REPORTS_BUCKET=hospital-ops-reports-local
# CDN_URL=https://cdn.hospitalops.in

# ABDM Integration (optional for local)
# ABDM_CLIENT_ID=xxx
# ABDM_CLIENT_SECRET=xxx
# ABDM_BASE_URL=https://dev.abdm.gov.in
# HIP_ID=xxx
# HFR_ID=xxx

# WhatsApp Business API (optional for local)
# WHATSAPP_PHONE_NUMBER_ID=xxx
# WHATSAPP_ACCESS_TOKEN=xxx
# WHATSAPP_BUSINESS_ACCOUNT_ID=xxx
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=xxx

# SMS Provider (optional for local)
# MSG91_AUTH_KEY=xxx
# MSG91_SENDER_ID=HOSPOP

# Email (optional for local)
# SENDGRID_API_KEY=SG.xxx
# EMAIL_FROM=noreply@hospitalops.in

# AI Services (optional for local)
# ANTHROPIC_API_KEY=sk-ant-xxx
# OPENAI_API_KEY=sk-xxx

# Payment Gateway (optional for local)
# RAZORPAY_KEY_ID=rzp_test_xxx
# RAZORPAY_KEY_SECRET=xxx

# Monitoring (optional for local)
# SENTRY_DSN=https://xxx@sentry.io/xxx
LOG_LEVEL=debug

# Feature Flags
ENABLE_ONLINE_BOOKING=true
ENABLE_TELEMEDICINE=true
ENABLE_AI_SCRIBE=false
ENABLE_ABDM_INTEGRATION=false
